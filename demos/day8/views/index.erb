<table cellspacing="0">
  <tr>
    <th>Title</th>
    <th>Actions</th>
  </tr>
  <%@notes.each  do |n| %>
    <tr>
      <td>
        <a href='/show/<%=n.id%>'><%=n.title%></a>
      </td>
      <td>
        <a href='/edit/<%=n.id%>' >Edit</a> | <a href='/delete/<%=n.id%>' onclick='return confirmDelete();' >Delete</a><br />
      </td>
    </tr>
  <%end%>
</table>
<script type="text/javascript">
  function confirmDelete(){
    return confirm("Do you really want to delete this note?");
  }
</script>
